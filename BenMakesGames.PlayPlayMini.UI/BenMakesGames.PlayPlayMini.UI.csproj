<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Version>0.9.0</Version>
    <Authors>Ben Hendel-Doying</Authors>
    <Company>Ben Hendel-Doying</Company>
    <Description>An extension for PlayPlayMini, adding a skinnable, object-oriented UI framework.</Description>
    <Copyright>2021-2022 Ben Hendel-Doying</Copyright>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/BenMakesGames/PlayPlayMini.UI</PackageProjectUrl>
    <PackageTags>monogame mouse ui framework oo</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.0.1641" />
    <PackageReference Include="BenMakesGames.PlayPlayMini" Version="0.10.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\BenMakesGames.PlayPlayMini\BenMakesGames.PlayPlayMini\BenMakesGames.PlayPlayMini.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath />
    </None>
  </ItemGroup>

</Project>
